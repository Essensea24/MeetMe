<%= form_for(@user) do |f| %>
<!-- setting condition to display errors if any save/create a new article if there is an error -->
 
	<% if @user.errors.any? %>
		<div id="error_explanation">
		<h2>
			<%= pluralize(@user.errors.count, "error") %> prohibited
			this user from being saved:
		</h2>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					  <li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :firstname %><br>
		<%= f.text_field :firstname %>
	</p>

	<p>
		<%= f.label :lastname %><br>
		<%= f.text_area :lastname %>
	</p>

	<p>
		<%= f.label :username %><br>
		<%= f.text_area :username %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_area :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>

	<p>
		<%= f.label :image %><br>
		<%= f.file_field :image %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>

<% end %>
